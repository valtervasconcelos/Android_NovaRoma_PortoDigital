<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utility.negocio.GerenciarVeiculos" >

     <TextView
        android:id="@+id/textViewGerenciarVeiculos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo a Tela Gerenciar Veículos" />

    <TextView
        android:id="@+id/textViewModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewGerenciarVeiculos"
        android:layout_below="@+id/textViewGerenciarVeiculos"
        android:layout_marginTop="18dp"
        android:text="Modelo: " />

    <EditText
        android:id="@+id/editTextModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewGerenciarVeiculos"
        android:layout_below="@+id/textViewGerenciarVeiculos"
        android:layout_toRightOf="@+id/textViewModelo"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewAno"
        android:layout_alignLeft="@+id/editTextPlaca"
        android:layout_alignRight="@+id/editTextPlaca"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewPlaca"
        android:layout_alignLeft="@+id/editTextModelo"
        android:layout_alignRight="@+id/editTextModelo"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewPlaca"
        android:layout_below="@+id/textViewPlaca"
        android:layout_marginTop="32dp"
        android:text="Ano: " />

    <TextView
        android:id="@+id/textViewPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModelo"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/editTextPlaca"
        android:text="Placa: " />

    <Button
        android:id="@+id/buttonAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewModelo"
        android:layout_below="@+id/editTextAno"
        android:layout_marginTop="22dp"
        android:text="ADICIONAR" />

    <EditText
        android:id="@+id/editTextRemover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonRemover"
        android:layout_alignRight="@+id/editTextAno"
        android:layout_toRightOf="@+id/buttonRemover"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextRastrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonRastrear"
        android:layout_alignRight="@+id/editTextRemover"
        android:layout_toRightOf="@+id/buttonRastrear"
        android:ems="10" />

    <Button
        android:id="@+id/buttonRemover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonAdicionar"
        android:layout_below="@+id/buttonAdicionar"
        android:text="Remover" />

    <Button
        android:id="@+id/buttonRastrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRemover"
        android:layout_below="@+id/buttonRemover"
        android:text="Rastrear" />

    <Button
        android:id="@+id/emergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRastrear"
        android:layout_below="@+id/editTextRastrear"
        android:text="Emergência" />

    <Button
        android:id="@+id/buttonSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emergencia"
        android:layout_below="@+id/emergencia"
        android:text="SAIR" />

    <Button
        android:id="@+id/buttonContatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emergencia"
        android:layout_alignBottom="@+id/emergencia"
        android:layout_toRightOf="@+id/emergencia"
        android:text="Contatos" />

</RelativeLayout>
